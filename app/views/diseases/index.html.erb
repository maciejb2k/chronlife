<div class="page-diseases">
  <header class="dash-header page-diseases__header">
    <div>
      <h1 class="dash-header__title">Choroby</h1>
      <%= render "shared/breadcrumbs" %>
    </div>
    <%= link_to new_disease_path, class: "dash-button dash-button--new" do %>
      <svg class="dash-button__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
      Dodaj nową chorobę
    <% end %>
  </header>
  <div class="page-diseases__content">
    <% if @diseases.to_a.any? %>
      <div class="diseases">
        <% @diseases.each do |disease| %>
          <%= link_to disease, class: "disease" do %>
            <!-- <div class="disease__ribbon" style="background: <%= disease.color %>;"></div> -->
            <div class="disease__content">
              <h3 class="disease__title">
                <%= disease.predefined_disease.name %>
                <% if disease.diagnosed_by_hp? %>
                  <div class="disease__diagnosed" title="Zdiagnozowane przez lekarza">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check-circle"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
                  </div>
                <% end %>
              </h3>
              <div class="disease__badges">
                <div class="disease__badge disease__badge--severity-<%= disease.severity %>">
                  <%= severity_to_string disease.severity %>
                </div>
              </div>
              <div class="disease__more">
                Przejdź do choroby
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="no-results">
        Na razie nie dodałeś żadnych chorób.
      </p>
    <% end %>
  </div>
  <div class="dash-pagination">
    <div class="dash-pagination__controls">
      <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
    <div class="dash-pagination__info">
      <%== pagy_info(@pagy) %>
    </div>
  </div>
</div>
