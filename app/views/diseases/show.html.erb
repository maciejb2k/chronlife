<div class="page-disease">
  <header class="dash-header page-disease__header">
    <div>
      <h1 class="dash-header__title"><%= @disease_name %></h1>
      <%= render "shared/breadcrumbs" %>
    </div>
  </header>
  <div class="page-disease__content">
    <div class="disease">

      <nav class="navigation">
        <%= link_to authenticated_root_path, class: "navigation__item" do %>
          <i class="ri-hearts-line navigation__item__icon"></i>
          <p class="navigation__item__text">Stan zdrowia</p>
        <% end %>
        <%= link_to disease_disease_symptoms_path(@disease), class: "navigation__item" do %>
          <i class="ri-thermometer-line navigation__item__icon"></i>
          <p class="navigation__item__text">Objawy</p>
        <% end %>
        <%= link_to authenticated_root_path, class: "navigation__item" do %>
          <i class="ri-surgical-mask-line navigation__item__icon"></i>
          <p class="navigation__item__text">Czynniki ryzyka</p>
        <% end %>
        <%= link_to authenticated_root_path, class: "navigation__item" do %>
          <i class="ri-first-aid-kit-line navigation__item__icon"></i>
          <p class="navigation__item__text">Terapie</p>
        <% end %>
        <%= link_to authenticated_root_path, class: "navigation__item" do %>
          <i class="ri-camera-3-line navigation__item__icon"></i>
          <p class="navigation__item__text">Zdjęcia</p>
        <% end %>
        <%= link_to authenticated_root_path, class: "navigation__item" do %>
          <i class="ri-edit-box-line navigation__item__icon"></i>
          <p class="navigation__item__text">Edytuj chorobę</p>
        <% end %>
      </nav>
      <div class="feed">
        .
      </div>
    </div>
  </div>
</div>
