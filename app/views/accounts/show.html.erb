<div class="page-account">
  <div class="page-account__container">
    <div class="dash-flash-messages">
      <%= turbo_frame_tag "flash" %>
    </div>
    <%= render "card" %>
    <div class="card-group">
      <header class="card-group__header">
        <div class="card-group__header__left">
          <h2 class="card-group__header__title"><%= t(".title") %></h2>
        </div>
        <div class="card-group__header__right">
        </div>
      </header>
      <div class="card-group__content">
        <% if policy(@account).show? %>
          <div class="grid grid-cols-3 gap-2">
            <div>
              <h3 class="text-base">Miejsce zamieszkania:</h3>
              <% if @account.city.present? && @account.country.present? %>
                <p class="text-sm"><%= @account.city %>, <%= @account.country %></p>
              <% else %>
                <p class="text-sm">Brak informacji</p>
              <% end %>
            </div>
            <div>
              <h3 class="text-base">Wykszta≈Çcenie:</h3>
              <% if @account.education.present? %>
                <p class="text-sm"><%= education_to_string @account.education %></p>
              <% else %>
                <p class="text-sm">Brak informacji</p>
              <% end %>
            </div>
            <div>
              <h3 class="text-base">Data urodzin:</h3>
              <% if @account.birthday.present? %>
                <p class="text-sm"><%= @account.birthday %></p>
              <% else %>
                <p class="text-sm">Brak informacji</p>
              <% end %>
            </div>
          </div>
        <% else %>
          <p class="dash-text"><%= t(".unauthorized") %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
