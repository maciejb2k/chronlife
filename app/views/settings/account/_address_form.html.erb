<%= form_with(model: [:settings, @account], html: { class: "settings-form" } ) do |f| %>
  <div class="settings-form__group">
    <%= f.label :city, t(".city.label"), class: "settings-form__label" %>
    <%= f.text_field :city, class: "settings-form__input", placeholder: t(".city.placeholder") %>
    <%= render DashFormErrorComponent.new(model: @account, field: :city) %>
  </div>
  <div class="settings-form__group">
    <%= f.label :country, t(".country.label"), class: "settings-form__label" %>
    <%= f.text_field :country, class: "settings-form__input", placeholder: t(".country.placeholder") %>
    <%= render DashFormErrorComponent.new(model: @account, field: :country) %>
  </div>
  <div class="settings-form__group">
    <%= f.submit t("dash_form.submit"), class: "dash-button dash-button--new settings-form__submit" %>
  </div>
<% end %>
