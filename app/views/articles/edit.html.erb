<div class="edit-article">
  <header class="dash-header">
    <div class="dash-header__left">
      <h1 class="dash-header__title"><%= t(".title") %></h1>
      <%= render "shared/breadcrumbs" %>
    </div>
    <div class="dash-header__right">
      <% if policy(@article).owner? %>
        <%= button_to @article, class: "dash-button dash-button--delete",
          method: :delete, form: { data: { turbo_confirm: t(".turbo.confirm") } } do %>
          <i class="ri-close-line dash-button__icon"></i>
          <%= t(".button.delete") %>
        <% end %>
      <% end %>
      <%= link_to article_path(@article), class: "dash-button dash-button--back" do %>
        <i class="ri-arrow-left-line dash-button__icon"></i>
      <% end %>
    </div>
  </header>
  <div class="dash-flash-messages">
    <%= turbo_frame_tag "flash" do %>
      <%= render "shared/dash_flash" %>
    <% end %>
  </div>
  <div>
    <%= render "form" %>
  </div>
</div>
